<?xml version='1.0' encoding='utf-8'?>
<widget id="com.stgpahatid.driver2" version="1.8.4" versionCode="1.8.4" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <name>Cordova React</name>
    <description>
        Cordova React
    </description>
    <author email="davidpoarch@outlook.com" href="https://example.reactcordova">
       dpoarch
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <gap:config-file parent="/manifest" platform="android">
        <supports-screens android:largeScreens="true" android:smallScreens="true" android:xlargeScreens="true" />
        <application android:theme="@android:style/Theme.NoTitleBar">
        </application>
    </gap:config-file>
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
